# ============================================
# Cấu Hình Edge Node - File .env
# ============================================

# Device Information
DEVICE_ID=device-001
DEVICE_TYPE=sensor-node

# ============================================
# Option 1: Sử dụng Log Processor (Khuyến nghị)
# ============================================
LOG_PROCESSOR_URL=http://log-processor-ip:3001

# ============================================
# Option 2: Gửi trực tiếp (nếu không dùng Log Processor)
# ============================================

# Elasticsearch (Logs)
ELASTICSEARCH_URL=http://elasticsearch-ip:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# InfluxDB (Metrics)
INFLUX_URL=http://influxdb-ip:8086
INFLUX_TOKEN=your-influx-token-here
INFLUX_ORG=your-org-name
INFLUX_BUCKET=iot_metrics

# ============================================
# OTA Webserver Configuration
# ============================================
OTA_SERVER_URL=http://ota-server-ip:3000
OTA_SERVER_WS_URL=http://ota-server-ip:3000
SOCKET_AUTH_TOKEN=your-secure-token-here

# ============================================
# Redis (Realtime Updates - Optional)
# ============================================
REDIS_URL=redis://redis-ip:6379
REDIS_PASSWORD=

# ============================================
# MinIO (Firmware Download - Optional)
# ============================================
MINIO_ENDPOINT=minio-ip:9000
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=firmware
MINIO_USE_SSL=false

